<button class="side-menu" name="Servers" value="/servers">All Servers</button>

<div style="font-size:0.8em; ">
	<input type="button" id="search" value="search" style="float:right" />
	<input type="text" id="keyword" style="width:110px" />
</div>
<style>
	.jstree-search {font-weight:bold; font-style:inherit !important}
</style>

<script src="/js/jstree/jquery.jstree.js"></script>
<script>
	$(document).ready(function(){
		$("#server-tree").jstree({
			"json_data" : {
				"ajax": {
					"url" : "/tags.json",
					"data" : function (n) { 
						return { id : n.attr ? n.attr("id") : 0 }; 
					}
				}
			},
			"themes" : {
				"theme" : "apple",
				"dots" : false,
				"icons" : true
			},
			"types" : {
				"types" : {
					"tag":{
						"icon":"folder",
					},
					"server" : {
						"icon" : {"image" : "/images/icons/os-linux-16.png"},
					}
				}
			},
			"search" : {
				"case_insensitive" : true,
				"show_only_matches" : false,
				"ajax" : {
					"url" : "/tags.json",
				}
			},
			"plugins" : ["themes", "json_data", "ui", "search", "types"]
		}).bind("select_node.jstree", function(e, data) {
			if(jQuery.data(data.rslt.obj[0], "id")) {
				var id = jQuery.data(data.rslt.obj[0], "id");
				var label = jQuery.data(data.rslt.obj[0], "name");
				if ($("#server-" + id).length == 0) {
					$("#tabs").tabs("add", "#server-" + id, label);
					var tabid = $("#tabs").tabs("option", "selected");
					$("#tabs").tabs("url", tabid, "/servers/" + id);
					$("#tabs").tabs("load", tabid);
				} else {
					idx = $("#tabs>div").index($("#server-" + id));
					$("#tabs").tabs("select", idx);
				}
			} else {
				$("#server-tree").jstree("toggle_node", data.rslt.obj[0]);
				$("#server-tree").jstree("deselect_node", data.rslt.obj[0]);
			}
		});

		$("#search").click(function() {
			$("#server-tree").jstree(
				"search",
				document.getElementById("keyword").value
			);
		});
	});
</script>
<div id="server-tree" style=""></div>

